pipeline {
    agent { node {label 'linux-rohit'}} 
    parameters {
        string(name: 'PERSON', defaultValue: 'Mr Jenkins', description: 'Who should I say hello to?')
    }
    stages {
        stage('Build') {
            steps {
            script {
            sh "rm -rf game-of-life"
            sh "git clone https://github.com/Dee601/game-of-life game-of-life"
            dir("game-of-life") {
            sh 'mvn clean install'
            dir('gameoflife-web/target/') {
            sh 'cp gameoflife.war /mnt/'
            }
         }
      }
    echo 'Build Successfully'
    }
   }    
  }
}
