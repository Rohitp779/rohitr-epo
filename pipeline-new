pipeline {
    agent { node { label 'linux-rohit' } }
    parameters {
                    string(name: 'PERSON', defaultValue: 'Mr Jenkins', description: 'Who should I say hello to?')
    }
    stages {
        stage('Build') {
            steps {
                sh '''
                    git clone https://github.com/Dee601/game-of-life
                    cd game-of-life/
                    mvn clean install
                    cd gameoflife-web/target/
                    cp gameoflife.war /mnt/apache-tomcat-9.0.80/webapps/ '''        
                echo 'Build Successfully'
            }
        }
        stage('test') {
            steps {
                echo 'xxxx'
            }
        }
    }
}
