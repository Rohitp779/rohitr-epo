pipeline {
    agent { node { label 'linux-rohit' } }
    parameters {
        string(name: 'Name', defaultValue: 'Mr Jenkins', description: 'Who should I say hello to?')
    }
    stages {
        stage('Hello') {
            steps {
                script {
                    echo "Hello ${params.Name}"
                }
            }
        }
        stage('Bye') {
            steps {
                echo "Goodbye to all from Rohit"
            }
        }
    }
}
